<div class="col-sm-12 col-lg-4 mb-3">
  <div id="post-id-<%= post.id %>">
    <div class="card">
      <div class="card-body">
        <div class="d-flex">
          <h4 class="card-title">
	          <!-- 投稿のタイトル -->
            <%= link_to post.title, post_path(post) %>
          </h4>
          <div class='ms-auto'> 
            <!-- 現在のユーザーが投稿の作成者の場合編集と削除のリンク-->
            <% if current_user.own?(post) %>
              <div class='d-flex justify-content-end'>
                <%= link_to edit_post_path(post), id: "button-edit-#{post.id}" do %>
                  <i class="bi bi-pencil-fill"></i>
                <% end %>
                <%= button_to post_path(post), method: :delete, id: "button-delete-#{post.id}", data: { turbo_confirm: t('defaults.delete_confirm') } do %>
                  <i class="bi bi-trash-fill"></i>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
        <!-- 投稿者と投稿日時 -->
        <ul class="list-inline">
          <li><i class="bi bi-person"></i><%= post.user.name %></li>
          <li><i class="bi bi-calendar"></i><%= l post.created_at, format: :short %></li>
        </ul>
        <!-- 選択式の回答の表示 -->
        <p class="card-text">以前のキャリア：<%= Post.human_attribute_name(:previous_carrier) %>: <%= post.previous_carrier_i18n %></p> 
        <p class="card-text">新しいキャリア：<%= Post.human_attribute_name(:new_carrier) %>: <%= post.new_carrier_i18n %></p> 
        <p class="card-text">料金差：<%= Post.human_attribute_name(:price_difference) %>: <%= post.price_difference_i18n %></p> 
        <p class="card-text">端末代金：<%= Post.human_attribute_name(:device_payment) %>: <%= post.device_payment_i18n %></p> 
        <p class="card-text">購入方法：<%= Post.human_attribute_name(:purchase_method) %>: <%= post.purchase_method_i18n %></p>  
      </div>
    </div>
  </div>
</div>