<div class="col-sm-12 col-lg-4 mb-3">
  <div id="post-id-<%= post.id %>">
    <div class="card">
      <div class="card-body">
        <div class="d-flex">
          <h4 class="card-title">
	          <!-- 投稿のタイトル -->
            <%= link_to post.title, post_path(post) %>
          </h4>
          <div class='ms-auto'> 
	          <!-- 編集ボタン -->
            <%= link_to edit_post_path(post), id: 'button-edit-#{post.id}' do %>
              <i class="bi bi-pencil-fill"></i>
            <% end %>
            <!-- 削除ボタン -->
            <%= link_to post_path(post), id: 'button-delete-#{post.id}', method: :delete, data: {confirm: '本当に削除しますか？'} do %>
              <i class="bi bi-trash-fill"></i>
            <% end %>
          </div>
        </div>
        <!-- 投稿者と投稿日時 -->
        <ul class="list-inline">
          <li><i class="bi bi-person"></i><%= post.user %></li>
          <li><i class="bi bi-calendar"></i><%= l post.created_at, format: :short %></li>
        </ul>
        <p class="card-text"><%= post.body %></p>
      </div>
    </div>
  </div>
</div>