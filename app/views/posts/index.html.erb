<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <h1><%= 'みんなのスマチョイ' %></h1>
      <%= render 'posts/search', q: @q, url: posts_path %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <!-- パーシャルファイルに -->
      <turbo-frame id="search_results">
        <%= render partial: "posts/search_results", locals: { posts: @posts } %>
      </turbo-frame>
    </div>
  </div>
</div>