<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <h1><%= 'みんなのスマチョイ' %></h1>
      <%= render 'posts/search', q: @q, url: posts_path %>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <div class="mb-3">投稿がありません</div>
        <% end %>
        <!-- %= paginate @posts, theme: 'bootstrap-5' % -->
      </div>
    </div>
  </div>
</div>