<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h2 class="text-center mt-5 mb-4">プロフィール編集</h2>

      <%= form_with model: @user, url: my_profile_path, local: true, class: "p-4 border rounded", data: { turbo: false } do |f| %>
        <%= render 'shared/error', object: f.object %>
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="text-center">
          <%= f.submit "更新", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="text-center mt-4">
        <%= link_to '戻る', my_profile_path, class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>