<div class="row mb-3" id="comment-form">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with model: comment, url: post_comments_path(post), data: { turbo: false } do |f| %>
      <%= f.label :"コメント" %>
      <%= f.text_area :body, class: "form-control mb-3", row: "4", placeholder: Comment.human_attribute_name(:本文) %>
      <%= f.submit '投稿する', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>